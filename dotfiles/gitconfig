	excludesfile = ~/.gitignore_global
	autocrlf = input
	whitespace = blank-at-eol,space-before-tabs,indent-with-non-tab,-tab-in-indent,-blank-at-eof,tabwidth=4
[difftool "sourcetree"]
	cmd = /usr/local/bin/ksdiff -w \"$LOCAL\" \"$REMOTE\"
