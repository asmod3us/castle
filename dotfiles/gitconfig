[mergetool "sourcetree"]
	cmd = /Applications/p4merge.app/Contents/MacOS/p4merge \"$BASE\" \"$LOCAL\" \"$REMOTE\" \"$MERGED\"
	trustExitCode = true
[color]
	ui = auto
[mergetool "p4mergetool"]
	cmd = /Applications/p4merge.app/Contents/Resources/launchp4merge $PWD/$BASE $PWD/$REMOTE $PWD/$LOCAL $PWD/$MERGED
	trustExitCode = false
[difftool "p4mergetool"]
	cmd = /Applications/p4merge.app/Contents/Resources/launchp4merge $LOCAL $REMOTE
[difftool "deltawalker"]
		cmd = "/Applications/DeltaWalker.app/Contents/MacOS/git-diff" "$LOCAL" "$REMOTE"
[mergetool "dw"]
		cmd = "/Applications/DeltaWalker.app/Contents/MacOS/git-merge" "$LOCAL" "$REMOTE" "$BASE" "$MERGED"
[alias]
	# list ignored files
	ignored = ls-files --others -i --exclude-standard
	# list files in tree
	ls = !sh -c 'git ls-tree -r --name-only $( (git symbolic-ref HEAD 2> /dev/null || git rev-parse --short HEAD 2> /dev/null) | sed "s#refs/heads/##")'
	# show new commits generated by last command
	new = !sh -c 'git log $1@{1}..$1@{0} "$@"'
	inc = !git log --oneline ..@{u} && git diff --stat ..@{u}
	recover = !sh -c 'git checkout $(git rev-list -n 1 HEAD -- "$1")^ -- "$1"'
	eraser = !sh -c 'git rev-list -n 1 HEAD -- "$@"'
[merge]
# ff = false
[diff]
	renames = copies
