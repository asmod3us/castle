[alias]
	# list ignored files
	ignored = ls-files --others -i --exclude-standard
	# list files in tree
	ls = !sh -c 'git ls-tree -r --name-only $( (git symbolic-ref HEAD 2> /dev/null || git rev-parse --short HEAD 2> /dev/null) | sed "s#refs/heads/##")'
	# show new commits generated by last command
	new = !sh -c 'git log $1@{1}..$1@{0} "$@"'
	inc = !git log --oneline ..@{u} && git diff --stat ..@{u}
	recover = !sh -c 'git checkout $(git rev-list -n 1 HEAD -- "$1")^ -- "$1"'
	eraser = !sh -c 'git rev-list -n 1 HEAD -- "$@"'
	housekeep = !git branch -r --merged develop | sed -e 's, *origin/,,' | grep -v develop$ | grep -v master$ | xargs -I% echo git push origin --delete %
	nuke = !sh -c 'git-nuke $1' -
	aliases = "!git config -l | grep alias | cut -c 7-"
	dontcare = !sh -c 'git update-index --assume-unchanged "$@"'
	up = pull --rebase --autostash
[merge]
	tool = deltawalker
# ff = false
[diff]
	tool = deltawalker
	renames = copies
[filter "media"]
	required = true
	clean = git media clean %f
	smudge = git media smudge %f
[filter "lfs"]
	required = true
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
