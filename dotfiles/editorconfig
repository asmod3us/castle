; EditorConfig is awesome: http://EditorConfig.org

; top-most EditorConfig file
root = true

; Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

; tab indentation
[**.py]
indent_style = tab
tab_width = 4

; Tab indentation
[**.{js,coffee}]
indent_style = tab
tab_width = 4
trim_trailing_whitespace = true
charset = utf-8
jslint_happy = true
indent_with_tabs = true

[**.{css,scss,less}]
indent_style = tab
tab_width = 4
trim_trailing_whitespace = true
charset = utf-8

[**.html]
indent_style = tab
tab_width = 4
trim_trailing_whitespace = true
max_char = 120
brace_style = expand
charset = utf-8

[Makefile]
indent_style = tab
