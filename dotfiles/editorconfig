; EditorConfig is awesome: http://EditorConfig.org

; top-most EditorConfig file
root = true

; Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

; tab indentation
[*.py]
indent_style = space
indent_size = 4

[*.pl]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

; Tab indentation
[*.{js,coffee}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
charset = utf-8
jslint_happy = true

[*.{css,scss,less}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
charset = utf-8

[*.html]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
max_char = 120
brace_style = expand
charset = utf-8

[*.sh]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[Makefile]
indent_style = tab

[{package.json,.travis.yml}]
indent_style = space
indent_size = 2
